    <!DOCTYPE html>
<html lang="ru">
<head>
    <link rel="stylesheet" href="/static/globals.css">
    <link rel="stylesheet" href="/static/profile.css">
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= user.username %> profile</title>
</head>
<% if (user.mine == true) { %>
  <body>
      <div class="container">
        <div class="profile">
          <div class="avatar">
            <img
              src=<%= user.avatar || "http://localhost:9999/media/people.png" %>
              alt="Аватар пользователя"
            />
            <span class="bio"><%= user.bio || "" %></span>
          </div>
          <h2 class="username"><%= user.username %>
          </h2>
          <div class="dataChange">
   <img src="/media/settings.svg" alt="settings">
 </div>
        </div>
      </div>
      <div class="settings">
        <img src="/media/close.svg" alt="close" class="closeSettings">

        <div class="options">
          <button class="option">Account</button>
      </div>
        <div class="values">
          <div class="accountValues"></div>
        </div>
      </div>
  </body>
  <script src="/static/profile.js"></script>
<% } else { %>
  <body>
      <div class="container">
        <div class="profile">
          <img
            src=<%= user.avatar || "http://localhost:9999/media/people.png" %>
            alt="Аватар пользователя"
          />
          <h2><%= user.username %></h2>
          <p><%= user.bio %></p>
        </div>
      </div>
  </body>
  <%} %>
</html>
